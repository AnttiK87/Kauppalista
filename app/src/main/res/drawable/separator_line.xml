<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle with rounded bottom-right corner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/border_color" />
        </shape>
    </item>
    <!-- Transparent rectangle to cover top-right, bottom-left, and top-left corners -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainBC" />
        </shape>
    </item>

</layer-list>