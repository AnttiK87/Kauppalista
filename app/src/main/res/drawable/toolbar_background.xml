<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Background rectangle with rounded bottom-right corner -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/mainOrange" />
        </shape>
    </item>
    <!-- Transparent rectangle to cover top-right, bottom-left, and top-left corners -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainOrange" />
        </shape>
    </item>

    <item android:left="0dp" android:top="0dp" android:right="30dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainOrange" />
        </shape>
    </item>

</layer-list>